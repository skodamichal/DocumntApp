<h1 class="text-2xl mb-4">Dokumenty</h1>

<%= link_to "Nový dokument", new_document_path, class: "px-3 py-2 bg-blue-600 text-white rounded" %>

<table class="w-full mt-4 border">
  <thead>
    <tr>
      <th class="p-2 border">Název</th>
      <th class="p-2 border">Platnost od</th>
      <th class="p-2 border">Platnost do</th>
      <th class="p-2 border">Popis</th>
      <th class="p-2 border"></th>
    </tr>
  </thead>
  <tbody>
    <% @documents.each do |d| %>
      <tr>
        <td class="p-2 border"><%= d.docname %></td>
        <td class="p-2 border"><%= d.valid_from %></td>
        <td class="p-2 border"><%= d.valid_to %></td>
        <td class="p-2 border"><%= d.description %></td>
        <td class="p-2 border">
          <%= link_to "Upravit", edit_document_path(d) %> |
          <%= link_to "Smazat", d, data: { turbo_method: :delete, turbo_confirm: "Smazat?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
